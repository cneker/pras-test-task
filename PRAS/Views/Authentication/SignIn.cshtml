@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["SignIn"];
}

<div class="container py-5 h-80">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card shadow-2-strong" style="border-radius: 1rem;">
                <div class="card-body p-5 text-center">
                    <h3 class="mb-5">@ViewData["Title"]</h3>
                        <div class="form-outline mb-4">
                            <input id="email" type="email" class="form-control form-control-lg" placeholder="@Localizer["Email"]"/>
                        </div>
                        <div class="form-outline mb-4">
                            <input id="password" type="password" class="form-control form-control-lg" placeholder="@Localizer["Password"]"/>
                        </div>
                        <input id="login" class="btn btn-primary btn-lg btn-block" type="submit" value="@Localizer["LoginButton"]"/>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/auth.js"></script>