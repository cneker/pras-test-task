@using PRAS.ViewModel;
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@model AdminViewModel
@{
    ViewData["Title"] = Localizer["Title"];
}

<link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />

<link rel="stylesheet" href="~/css/FarmOverview.css" asp-append-version="true" />
<div class="align-items-start">
    <div class="row">
        <div class="col-lg-2">
            <ul class="flex-column nav nav-pills mb-3 nav-justified" id="pills-tab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="pills-all-news-tab" data-bs-toggle="pill" data-bs-target="#pills-all-news" type="button" role="tab" aria-controls="pills-all-news" aria-selected="true">@Localizer["AllNewsTab"]</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="pills-create-tab" data-bs-toggle="pill" data-bs-target="#pills-create" type="button" role="tab" aria-controls="pills-create" aria-selected="false">@Localizer["CreateNewsTab"]</button>
                </li>
            </ul>
        </div>
        <div class="col tab-content flex-column" id="pills-tabContent">
            <div class="tab-pane fade show active" id="pills-all-news" role="tabpanel" aria-labelledby="pills-all-news">
                <div id="scrolList" class="container text-center align-items-center">
                    <partial name="_NewsPartial" model="Model.AllNews"/>
                </div>
                @if (Model.HasNext)
                {
                    <div class="align-items-center text-center" style="margin-right: 6rem">
                        <input id="load-more" class="btn btn-primary btn-lg btn-block" type="submit" value="@Localizer["LoadButton"]" />
                    </div>
                }
            </div>
            <div class="tab-pane fade show" id="pills-create" role="tabpanel" aria-labelledby="pills-create">
                <div class="card">
                    <div class="card-body">
                        <div class="justify-content-center align-items-center text-center">
                            <img id="image" class="img-fluid" style="max-width: 50%" />
                        </div>
                        <div class="form-outline mb-4">
                            <label>@Localizer["Image"]</label>
                            <input class="form-control" type="file" accept="image/*" id="file">
                        </div>
                        <div class="form-outline mb-4">
                            <label>@Localizer["NewsTitle"]</label>
                            <input id="title" class="form-control form-control-lg" type="text" />
                        </div>
                        <div class="form-outline mb-4">
                            <label>@Localizer["SubTitle"]</label>
                            <input id="subtitle" class="form-control form-control-lg" type="text" />
                        </div>
                        <div class="form-outline mb-4">
                            <label>@Localizer["Description"]</label>
                            <textarea id="description" class="form-control" rows="10" cols="50"></textarea>
                        </div>
                        
                        <input id="create" class="btn btn-primary btn-lg btn-block" type="submit" value="@Localizer["CreateButton"]"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/admin.js"></script>